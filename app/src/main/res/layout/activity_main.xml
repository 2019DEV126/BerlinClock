<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonDigitalToBerlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/value_10"
        android:layout_margin="@dimen/value_10"
        android:text="@string/text_convert_digital_time_berlin_time"
        android:textSize="@dimen/text_20"
        android:textStyle="bold"
        android:background="@drawable/red_button_selector"/>

    <Button
        android:id="@+id/buttonBerlinToDigital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/value_10"
        android:layout_margin="@dimen/value_10"
        android:text="@string/text_convert_berlin_time_digital_time"
        android:textSize="@dimen/text_20"
        android:textStyle="bold"
        android:background="@drawable/red_button_selector"/>

</LinearLayout>